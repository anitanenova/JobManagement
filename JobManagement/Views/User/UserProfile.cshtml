<script src="~/js/CustomsScripts/Account/profile.js"></script>
@using JobManagement.Resources;
@model JobManagement.Models.User.UserProfileViewModel

<div class="col-md-12">
    <div class="col-md-2 col-md-offset-5 profil-picture-border">
        @if (Model.ProfileImageStr == null)
        {
            <img class="profil-picture" alt="AJpG6gC3lXTlWOv3EQ4diq7a.jpg" src="~/img/user-profile-image.png" />
        }
        else
        {
            <img class="profil-picture" alt="AJpG6gC3lXTlWOv3EQ4diq7a.jpg" src="data:image/jpeg;base64,@Model.ProfileImageStr" />
        }
    </div>
</div>
<div class="col-md-12">
    <hr class="horizontal-line">
</div>
<div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
        <div id="group-Btn" class="btn-group btn-group-justified">
            <a id="btn-profile-info" href="#" class="btn profile-btn btn-default-group primary-active">@AccountResource.Information</a>
            <a id="btn-profile-gallery" href="#" class="btn profile-btn btn-default-group ">@AccountResource.Gallery</a>
            <a id="btn-profile-video" href="#" class="btn profile-btn btn-default-group ">@AccountResource.Video</a>
        </div>
    </div>
</div>
<div class="col-md-12">
    <hr class="horizontal-line">
</div>

<div id="profile-container" class="col-md-12">
    @{ await Html.RenderPartialAsync("_UserInformation", Model.UserInformationModel); }
</div>