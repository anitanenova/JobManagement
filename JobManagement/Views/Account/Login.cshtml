@using JobManagement.Configuration
@using JobManagement.Resources
@using Microsoft.AspNetCore.Identity
@model JobManagement.Models.Account.LoginViewModel

<link href="~/css/log-styles.css" rel="stylesheet" />
<div class="container">
    <div class="row container-row">
        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
            <h1 class="login-header-big txt-log-page-title">@AccountResource.NotAccount</h1>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 padding-20">
                    <div class="col-md-12">
                        <div class="col-md-8 col-md-offset-2">
                            <img class="log-page-img" src="~/img/adminprofile111111.jpeg"/>
                        </div>
                    </div>
                    
                    <p class="log-page-txt">
                    @AccountResource.UserProfileDescriptionMsg
                    </p>
                    <div class="note">
                        <a class="type-profile" asp-controller="Account" asp-action="UserRegister">@AccountResource.UserProfile</a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 padding-20">
                    <div class="col-md-12">
                        <div class="col-md-8 col-md-offset-2">
                            <img class="log-page-img" src="~/img/job9.png" />
                            </div>
                        </div>
                    <p class="log-page-txt">
                    @AccountResource.BusinessUserProfileDescriptionMsg
                    </p>
                    <div class="note">
                        <a class="type-profile" asp-controller="Account" asp-action="BusinessRegister">@AccountResource.businessProfile</a>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding log-form-border">
                <form asp-controller="Account" asp-action="Login" id="login-form" class="smart-form client-form">
                    @Html.AntiForgeryToken()
                    <header>
                        @AccountResource.LogIn
                    </header>

                    <fieldset>
                        <section>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        </section>
                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input asp-for="Email"  placeholder="Имейл">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> @AccountResource.PleaseEnterEmailonly</b>
                                <span class="text-danger txt-small" asp-validation-for="Email"></span>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" asp-for="Password" placeholder="Парола">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> @AccountResource.EnterPassword</b>
                                <span  class="text-danger txt-small" asp-validation-for="Password"></span>
                            </label>
                            <div class="note">
                                <a asp-controller="Account" asp-action="ForgotPassword">@AccountResource.ForgotPassword</a>
                            </div>
                        </section>

                        <section>
                            <label class="checkbox">
                                <input asp-for="RememberMe" type="checkbox">
                                <i></i>@AccountResource.RememberMe
                              
                            </label>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            @AccountResource.LogIn
                        </button>
                    </footer>
                </form>

            </div>

        </div>
    </div>
</div>